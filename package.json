{
  "name": "eminium-launcher",
  "version": "1.0.1",
  "private": true,
  "description": "Launcheur pour le serveur Eminium - Installez et Jouez ! v${version}",
  "author": {
    "name": "Eminium",
    "email": "support@eminium.ovh"
  },
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --dev",
    "build": "electron-builder --dir",
    "dev": "npm start",
    "electron": "electron .",
    "webpack": "webpack --mode development",
    "webpack:prod": "webpack --mode production",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "icons": "electron-builder icon -i assets/icon/icon.png -o assets/icon"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "axios": "^1.7.2",
    "azuriom-auth": "^1.0.1",
    "copy-webpack-plugin": "^13.0.1",
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.4.5",
    "dotenv-webpack": "^8.1.1",
    "electron-store": "^9.0.0",
    "html-webpack-plugin": "^5.6.4",
    "minecraft-launcher-core": "^3.18.2",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3",
    "icon-gen": "^5.0.0",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "ovh.eminium.launcher",
    "productName": "Eminium Launcher",
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js",
      "assets/**/*",
      "node_modules/**/*",
      "!src/renderer/**/*",
      "!src/.env",
      "!src/.env.*",
      "!webpack.config.js"
    ],
    "asar": false,
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "assets/icon/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/icon/icon.png",
      "category": "Game",
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Eminium <support@eminium.ovh>",
      "artifactName": "Eminium-Launcher-${version}.${ext}"
    },
    "mac": {
      "icon": "assets/icon/app.icns",
      "category": "public.app-category.games",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "Eminium-Launcher-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon/icon.ico",
      "uninstallerIcon": "assets/icon/icon.ico",
      "deleteAppDataOnUninstall": false,
      "artifactName": "Eminium-Launcher-Setup-${version}.exe"
    }
  }
}
